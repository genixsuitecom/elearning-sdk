{
    "compilerOptions": {
        "outDir": "dist",
        "declaration": true,
        "emitDeclarationOnly": false,
        "module": "NodeNext",
        "target": "ES2020",
        "moduleResolution": "NodeNext",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strict": true,
        "resolveJsonModule": true,
        "lib": [
            "ES2020",
            "DOM"
        ]
    },
    "include": [
        "./**/*.ts"
    ]
}