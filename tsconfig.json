{
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": ".",
        "declaration": true,
        "emitDeclarationOnly": false,
        "module": "NodeNext",
        "target": "ES2020",
        "moduleResolution": "NodeNext",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strict": true,
        "resolveJsonModule": true,
        "baseUrl": ".",
        "lib": [
            "ES2020",
            "DOM"
        ]
    },
    "include": [
        "core/**/*.ts",
        "models/**/*.ts",
        "services/**/*.ts",
        "schemas/**/*.ts",
        "types/**/*.ts",
        "ElearningApiClient.ts",
        "index.ts",
        "example.ts",
        "examples/**/*.ts"
    ],
    "exclude": [
        "dist",
        "node_modules"
    ]
}